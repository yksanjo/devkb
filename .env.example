# DevKB Configuration

# Anthropic API (for Claude integration and auto-categorization)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Server configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Database paths
SQLITE_PATH=./data/devkb.db
CHROMA_PATH=./data/chroma

# Embedding model
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Search configuration
DEFAULT_SEARCH_LIMIT=10
MIN_SIMILARITY_THRESHOLD=0.3

# File watching
WATCHED_DIRECTORIES=./knowledge

# Chunking
MAX_CHUNK_SIZE=1000
CHUNK_OVERLAP=200
